{
  "name": "simple-llm",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:web": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "pipeline": "ts-node --project tsconfig.scripts.json scripts/run-pipeline.ts --corpus ./sample.txt --set-default",
    "pipeline:custom": "ts-node --project tsconfig.scripts.json scripts/run-pipeline.ts",
    "fetch": "ts-node --project tsconfig.scripts.json scripts/fetch-text.ts",
    "prepare-data": "ts-node --project tsconfig.scripts.json scripts/prepare-training-data.ts",
    "train": "ts-node --project tsconfig.scripts.json scripts/train-model.ts",
    "build-vocab": "ts-node --project tsconfig.scripts.json scripts/build-vocab.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A minimal Transformer-based language model built from scratch",
  "devDependencies": {
    "@types/node": "^22.18.12",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vitest": "^4.0.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.1.2"
  }
}
